# Inbound authentication
INBOUND_PATH_UUID=your-unique-uuid-here
INBOUND_AUTH_TOKEN=your-inbound-bearer-token

# Groq API configuration
GROQ_API_KEY=your-groq-api-key

# Clawdbot Gateway configuration
GATEWAY_URL=http://192.168.1.150:18790/tools/invoke
GATEWAY_TOKEN=your-gateway-bearer-token
TARGET_SESSION_KEY=target-session-key

# Optional settings
GHOST_MODE=false
MAX_UPLOAD_SIZE_MB=100
GROQ_TIMEOUT_SECONDS=60
GATEWAY_TIMEOUT_SECONDS=10
GATEWAY_RETRY_ATTEMPTS=3

# OAuth Relay Configuration (optional - all defaults work)
OAUTH_ENABLED=false
OAUTH_CALLBACK_PATH=/oauth/callback
OAUTH_CODE_KEYS=code,authorization_code
OAUTH_SOCKET_PATH=/tmp/poast-relay-oauth.sock
OAUTH_TCP_FALLBACK_PORT=9999
OAUTH_DEFAULT_TIMEOUT=300.0
OAUTH_LOG_UNMATCHED=true
OAUTH_USE_TCP=false

# Docker Networking (TCP mode)
# Coordinator: bind address (0.0.0.0 for Docker, 127.0.0.1 for local)
OAUTH_TCP_BIND_ADDRESS=127.0.0.1

# Client: connection address (container name for Docker, 127.0.0.1 for local)
OAUTH_TCP_HOST=127.0.0.1
